<form>
    <div class="form-group">
        <label>{{localize "GENERIC.Level"}}</label>
        <div class="form-fields">
            <input type="number" name="level" min="1" value="{{level}}">
        </div>
    </div>
    <div class="form-group">
        <label>{{localize "DIALOG.EditBonusTalentsRule.Quantity"}}</label>
        <div class="form-fields">
            <input type="number" name="quantity" min="1" value="{{quantity}}">
        </div>        
    </div>
    <div class="form-group-stacked">
        <label>{{localize "COSMERE.Item.Sheet.Ancestry.Restrictions"}}</label>
        <div class="form-fields">
            <input type="text" name="restrictions" value="{{restrictions}}">
        </div>
    </div>
    <div class="form-group submit">
        <button data-action="update" type="submit">
            {{localize "GENERIC.Button.Update"}}
        </button>
    </div>
</form>