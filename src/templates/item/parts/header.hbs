<header class="sheet-header">
    <div class="border"></div>
    <div class="portrait">
        <img name="img" src="{{item.img}}" data-tooltip="{{item.name}}" data-action="edit-img">
    </div>    
    <span class="document-name">
        <input class="value" name="name" type="text" value="{{item.name}}">
    </span>
    <span class="document-type">
        {{localize typeLabel}}
    </span>
</header>