<form>
    <div id="consumables">        
        {{#each resources as |resource|}}
        <div class="form-group" id="{{resource.id}}">
            <label>{{resource.label}}</label>
            {{#if resource.amount}}
            <input id="{{resource.id}}-amount" type="number" name="{{resource.label}}-amount"
                min="{{resource.amount.min}}"
                {{#if (gte max min)}}max="{{resource.amount.max}}"{{/if}}
                step="1"
            >
            {{/if}}
            <input id="{{resource.id}}-shouldConsume" type="checkbox" name="{{resource.label}}-shouldConsume" {{#if resource.shouldConsume}}checked{{/if}}>
        </div>
        {{/each}}
    </div>
</form>