<form>
    {{formGroup schema.fields.type value=type localize=true}}

    {{#if (eq type "skill-ranks")}}
        {{formGroup schema.fields.skill value=skill localize=true blank=false}}
        {{formGroup schema.fields.ranks value=ranks localize=true}}
    {{else if (eq type "items")}}
        <fieldset>
            <legend>{{localize "COSMERE.Item.Goal.Reward.Type.Items"}}</legend>
            {{app-document-drop-list
                name="items"
                value=items
                type="Item"
            }}
        </fieldset>
    {{/if}}

    {{!-- Submit --}}
    <div class="form-group submit">
        <button data-action="update" type="submit">
            {{localize "GENERIC.Button.Update"}}
        </button>
    </div>
</form>