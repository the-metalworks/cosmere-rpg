<ul class="item-list reward-list">
    <li class="item header">
        <section class="details">
            <span class="title">{{localize "GENERIC.Description"}}</span>
            <span class="subtitle wide">{{localize "GENERIC.Type"}}</span>
            <div class="controls icon active">
                {{#if editable}}
                <a data-action="create-reward"
                    data-tooltip="{{localize "COSMERE.Item.Sheet.Goal.Reward.Create"}}"
                >
                    <i class="fas fa-plus"></i>
                </a>
                {{else}}
                <div></div>
                {{/if}}
            </div>
        </section>
    </li>

    {{#each rewards as |reward index|}}
    <li class="item reward" data-id="{{reward._id}}">
        <section class="details">
            <div class="name">
                {{#if (eq reward.type "skill-ranks")}}
                <span>
                    {{localize "COSMERE.Item.Sheet.Goal.Reward.SkillRanksDescriptionValue" 
                        skill=(localize (concat "COSMERE.Skill." reward.skill))
                        ranks=reward.ranks
                    }}
                </span>
                {{else if (eq reward.type "items")}}
                    <div class="document-list">
                        {{#each reward.items as |item|}}
                        {{{item.link}}}
                        {{/each}}
                    </div>
                {{/if}}
            </div>
            <div class="detail wide">                
                <span>{{localize typeLabel}}</span>
            </div>
            <div class="controls icon faded">
                {{#if @root.editable}}
                <a data-action="edit-reward" 
                    data-tooltip="{{localize "GENERIC.Button.Edit"}}"
                >
                    <i class="fas fa-edit"></i>
                </a>
                <a data-action="remove-reward" 
                    data-tooltip="{{localize "GENERIC.Button.Remove"}}"
                >
                    <i class="fas fa-trash-alt"></i>
                </a>
                {{/if}}
            </div>
        </section>
    </li>
    {{/each}}
</ul>