{{#if hasModality}}
<fieldset>
    <legend>{{localize "COSMERE.Item.Sheet.Modality.Title"}}</legend>
    <div class="form-group">
        <label>{{localize "COSMERE.Item.Sheet.Modality.HasModality"}}</label>
        <div class="form-fields">
            <input type="checkbox" 
                name="modalityEnabled"
                {{#if modalityEnabled}}
                checked
                {{/if}}
            >
        </div>        
    </div>
    {{#if modalityEnabled}}
        <div class="form-group">
            <label>{{localize systemFields.modality.label}}</label>
            {{app-id-input
                name="system.modality"
                value=item.system.modality
            }}
        </div>
        <p class="hint">
            {{localize systemFields.modality.hint}}
        </p>
    {{/if}}
</fieldset>    
{{/if}}