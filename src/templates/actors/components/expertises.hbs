{{#if (or isEditMode hasExpertises)}}
<div class="collapsible {{#unless sectionCollapsed}}expanded{{/unless}}">
    <div class="icon-header">
        <div class="title">
            <i class="fas fa-book"></i>
            <span>{{localize "COSMERE.Actor.Sheet.Expertises"}}</span>
        </div>
        <div class="controls">
            {{#if isEditMode}}
            <a role="button"
                data-action="edit-expertises"
                data-tooltip="COSMERE.Actor.Sheet.EditExpertises"
            >
                <i class="fas fa-pen-to-square"></i>
            </a>
            {{/if}}
        </div>
    </div>    
    <div class="pills-list collapsible-content">
        <div class="wrapper">
            {{#each expertises as |expertise|}}
            <div class="pill" data-id="{{expertise.id}}"
                data-tooltip="{{expertise.label}} ({{localize expertise.typeLabel}})">
                <span class="name">{{expertise.label}}</span>
                <span class="separator">|</span>
                <span><i class="{{expertise.typeIcon}}" aria-label="{{localize expertise.typeLabel}}"></i></span>
            </div>
            {{/each}}
        </div>        
    </div>
</div>
{{/if}}