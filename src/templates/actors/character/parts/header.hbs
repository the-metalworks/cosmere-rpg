<header class="sheet-header">
    <div class="title">
        <h1 class="document-name">            
            <input class="value" type="text" name="name" value="{{actor.name}}" {{#unless isEditMode}}readonly{{/unless}}>           
        </h1>
        <div class="details">
            <span class="ancestry">{{ localize ancestryLabel }}</span>
            
            {{#with pathTypes as |pathTypes|}}
            {{#if (gt pathTypes.length 0)}}

            <i class="cosmere-icon delim">o</i>

            {{#each pathTypes as |pathType ti|}}

            {{#with pathType.paths as |paths|}}
            {{#each paths as |path pi|}}

            <span class="path">{{path.name}}</span>

            {{#if (lt pi (sub paths.length 1))}}
            <span class="path">/</span>
            {{/if}}

            {{/each}}
            {{/with}}

            {{#if (lt ti (sub pathTypes.length 1))}}
            <i class="cosmere-icon delim">o</i>
            {{/if}}

            {{/each}}

            {{/if}}
            {{/with}}
        </div>
    </div>
    <div class="level-details">
        <div class="sheet-stack level">
            <span class="label">{{localize "COSMERE.Actor.Sheet.Level"}}</span>
            <div class="container">
                <div class="background"></div>
                <div class="star"></div>
                <div class="border"></div>

                <input class="value"
                    type="number"
                    name="system.level",
                    value="{{actor.system.level}}",
                    min="1",
                    step="1"
                    {{#if (not isEditMode)}}
                    readonly
                    {{/if}}
                >
            </div>
        </div>
    </div>
</header>