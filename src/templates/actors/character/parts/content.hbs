<section class="sheet-content flexrow">
    <section class="col-left">
        {{app-actor-details}}
        {{#each @root.resources as |resourceId|}}
        {{app-actor-resource resource=resourceId}}
        {{/each}}

        <div class="scroll-container">
            <div class="scroll-body">
                {{app-character-favorites class="list-component"}}
           </div>
        </div>
    </section>
    <section class="col-main">
        {{app-actor-attributes}}
        <div class="scroll-container">            
            <div class="tab-body">
                {{> char-details-tab}}
                {{> char-actions-tab}}
                {{> char-equipment-tab}}
                {{> char-goals-tab}}
                {{> char-biography-tab}}
                {{> char-effects-tab}}
            </div>
        </div>
    </section>
</section>