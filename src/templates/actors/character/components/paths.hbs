{{#each paths as |path|}}
<div class="path"
    data-id="{{path.id}}"
>
    {{!-- Details --}}
    <div class="details">        
        <div class="title" data-action="view">
            <span class="name">
                {{path.name}}
                {{#if @root.isEditMode}}
                    <div class="controls">
                        <a data-action="remove"
                            data-tooltip="GENERIC.Button.Remove"
                        >
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </div>
                {{/if}}
            </span>
            <span class="item-type">{{localize path.typeLabel}} Path</span>
        </div>

        <div class="level"
            data-action="view"
        >
            {{path.level}}
        </div>
    </div>

    {{!-- Skills --}}
    {{#if (gt path.skills.length 0)}}
        <ul class="skill-list">
            {{#each path.skills as |skill|}}
                <li class="skill" data-id="{{skill.id}}">
                    {{app-actor-skill
                        skill=skill.id
                        readonly=(not @root.isEditMode)
                        pips=true
                    }}
                </li>
            {{/each}}
        </ul>
    {{/if}}

    {{!-- Background image --}}
    {{#if img}}
        <div class="background-img">
            <img src="{{img}}">
        </div>
    {{/if}}
</div>
{{/each}}
{{#if (eq paths.length 0)}}
<div class="path drop-area">
    <span>{{localize "COSMERE.Actor.Sheet.PathPlaceholder"}}</span>
</div>
{{/if}}