<form>
    <div class="form-group max">
        {{#if (eq mode 'derived')}}
        <input name="die"
            type="text"
            value="{{derived die}}"
            readonly
        >
        {{else}}
        <select name="die">
            {{selectOptions recoveryDice selected=override}}
        </select>
        {{/if}}
    </div>
    <div class="form-group field">
        <label>{{localize "GENERIC.Mode"}}</label>
        <select name="mode">
            {{selectOptions modes selected=mode localize=true}}
        </select>
    </div>
    <div class="form-group submit">
        <button data-action="update-recovery" type="submit">
            {{localize "GENERIC.Button.Update"}}
        </button>
    </div>
</form>