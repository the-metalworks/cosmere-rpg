<form>
    <div class="form-group max">
        <input 
            name="formula" 
            {{#if (eq mode 'derived')}}
            type="text" 
            value="{{formula}}" 
            readonly
            {{else}}
            type="number"
            value="{{override}}"
            min="0"
            step="1"
            {{/if}}
        >
    </div>
    <div class="form-group field">
        <label>{{localize "GENERIC.Mode"}}</label>
        <select name="mode">
            {{selectOptions modes selected=mode localize=true}}
        </select>
    </div>
    <div class="form-group field">
        <label>{{localize "GENERIC.Bonus"}}</label>
        <input 
            name="bonus" 
            {{#if (eq mode 'derived')}}
            type="number" 
            value="{{this.bonus}}" 
            min="0" 
            step="1" 
            {{else}}
            type="text"
            value="â€”"
            readonly
            {{/if}}
        >
    </div>
    <div class="form-group submit">
        <button data-action="update-defense" type="submit">
            {{localize "GENERIC.Button.Update"}}
        </button>
    </div>
</form>