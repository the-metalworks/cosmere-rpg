<form>
    <div class="form-group max">
        <input name="max"
            {{#if (eq mode 'derived')}}
            type="text"
            value="{{formula}}"
            readonly
            {{else}}
            type="number"
            min="0"
            step="1"
            value="{{derived max}}"
            {{/if}}
        >
    </div>
    <div class="form-group field">
        <label>{{localize "GENERIC.Mode"}}</label>
        <select name="mode">
            {{selectOptions modes selected=mode localize=true}}
        </select>
    </div>
    <div class="form-group submit">
        <button data-action="update-resource" type="submit">
            {{localize "GENERIC.Button.Update"}}
        </button>
    </div>
</form>