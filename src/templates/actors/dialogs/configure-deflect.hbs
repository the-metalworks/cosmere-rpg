<form>
    {{!-- Value --}}
    <div class="form-group max">
        <input 
            name="value"
            type="number" 
            min="0"
            step="1"
            {{#if (eq mode 'derived')}}
            value="{{value}}" 
            readonly
            {{else}}
            value="{{override}}"
            {{/if}}
        >
    </div>

    {{!-- Mode --}}
    <div class="form-group field">
        <label>{{localize "GENERIC.Mode"}}</label>
        <select name="mode">
            {{selectOptions modes selected=mode localize=true}}
        </select>
    </div>

    {{!-- Bonus --}}
    <div class="form-group field">
        <label>{{localize "GENERIC.Bonus"}}</label>
        <input 
            name="bonus" 
            {{#if (eq mode 'derived')}}
            type="number" 
            value="{{this.bonus}}" 
            min="0" 
            step="1" 
            {{else}}
            type="text"
            value="—"
            readonly
            {{/if}}
        >
    </div>

    {{!-- Natural deflect --}}
    <div class="form-group field">
        <label>{{localize "COSMERE.Actor.Deflect.Natural.Label"}}</label>
        <input 
            name="natural" 
            {{#if (eq mode 'derived')}}
            type="number" 
            value="{{this.natural}}" 
            min="0" 
            step="1" 
            {{else}}
            type="text"
            value="—"
            readonly
            {{/if}}
        >
    </div>
    <p class="hint">
        {{localize "COSMERE.Actor.Deflect.Natural.Hint"}}
    </p>
    {{!-- Submit --}}
    <div class="form-group submit">
        <button data-action="update-deflect" type="submit">
            {{localize "GENERIC.Button.Update"}}
        </button>
    </div>
</form>