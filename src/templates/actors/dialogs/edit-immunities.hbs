<div class="scroll-container">    
    <form>        
        {{#each categories as |category|}}
        <ul class="immunities-list">
            <li class="form-group header">
                <span class="title">{{localize category.label}}</span>
            </li>

            {{#each category.configuredImmunities as |immunity|}}
            <li class="form-group configured">
                {{#if (eq category.type 'damage')}}
                <span class="bullet fade icon faded fa-stack">
                    <i class="fa-solid fa-shield fa-stack-2x"></i>
                    <i class="fa-solid {{icons.damage.[immunity.name]}} fa-stack-1x fa-inverse"></i>
                </span>
                {{!-- {{else if (eq category.type 'condition')}}
                <span class="bullet fade icon faded fa-stack">
                    <i class="fa-solid fa-shield fa-stack-2x"></i>
                    <i class="fa-solid {{icons.condition.[immunity.name]}} fa-stack-1x fa-inverse"></i>
                </span> --}}
                {{else}}
                <i class="bullet fade icon faded fa-solid fa-shield"></i>
                {{/if}}
                <label>{{localize immunity.label}}</label>
                <input type="checkbox" name="{{category.type}}.{{immunity.name}}" 
                    {{#if immunity.isImmune}}checked{{/if}}
                >
            </li>
            {{/each}}
        </ul>
        {{/each}}
    </form>
</div>